---
import projects from '../config/projects.json';
---


<section>
    <h2 class="mx-2 font-bold text-center mt-10 text-5xl">Projects</h2>
    {
        projects.map((project) => (
            <div class="bg-slate-800 p-10 rounded-xl my-10 mx-2 md:flex">
                <div class="flex-1">

                <h2 class="text-2xl font-bold my-4">{project.title}</h2>
                <p class="my-2">{project.description}</p>

                <button class="bg-indigo-500 px-3 py-2 rounded-md text-white hover:bg-indigo-400">
                    <a href="/">Read More</a>
                </button>
                </div>

                <div class="flex-1 flex flex-col justify-center">

                <img src={project.image} alt="" class="w-80 m-auto">
                </div>
            </div>
        ))
    }

</section>